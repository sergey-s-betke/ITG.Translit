; Check http://editorconfig.org/ for more informations
; Top-most EditorConfig file
root = true

[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{editorconfig,gitattributes,gitignore}]

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[{LICENSE,NOTICE}]
indent_style = space
indent_size = 2

[*.{cmd,bat}]
indent_style = space
indent_size = 2
charset = utf-8

[*.{ps1,psm1,psd1}]
indent_style = tab
indent_size = 2
charset = utf-8

[*.{ps1xml}]
indent_style = tab
indent_size = 2
charset = utf-8
